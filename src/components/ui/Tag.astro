---
interface TagProps {
  text: string;
  mode: "light" | "dark";
}

const { text, mode } = Astro.props as TagProps;
---

<span
  class:list={[
    "inline-block px-3 py-1 rounded-full text-sm lg:text-md font-medium mb-4",
    mode === "dark" && "bg-blue-900/50 text-blue-400",
    mode === "light" && "text-tertiary bg-tertiary/10",
  ]}
>
  {text}
  </span>
